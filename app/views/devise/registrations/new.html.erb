<h2 class="newregistration">新規登録</h2>
<div class="form-box">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :姓 %>
      <%= f.text_field :last_name, autofocus: true, placeholder:"例）令和", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :名 %>
      <%= f.text_field :first_name, autofocus: true, placeholder:"例）さとこ", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :ニックネーム %>
      <%= f.text_field :nickname, autofocus: true, placeholder:"例）さとちゃん", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control' %>
    </div>

    <div class="actions mt-3">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>
    <div class="newregistration">
    既に会員登録がお済みの方は<%= render "devise/shared/links" %>
    </div>
