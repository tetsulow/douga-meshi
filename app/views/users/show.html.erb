<h2 class="mt-3">マイページ</h2>
<div class="container my-5">
  <div class="row">
  <h5 class="col-12 mt-3">投稿したレシピ<%= @recipes.count%>件</h5>
    <div class="list-wrap col-8">
      <% @recipes.each do |recipe| %>
        <div class="list-box">
          <%= link_to recipe_path(recipe.id) do %>
            <%= image_tag recipe.get_image, size: "200x200" %>
          <div class="list-comment">
            <span class="list-title">■<%= recipe.name %></span>
          <% end %>
            <span class="list-body"><%= recipe.caption %></span>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-3">
      <p><%= @user.nickname %>のマイキッチン</p>
      <div><%= link_to "編集する", edit_user_path(@user) %></div>
    </div>


    <h5 class="col-12">お気に入りレシピ<%= @favorite_list.count%>件</h5>
    <div class="list-wrap col-8">
      <% if @favorite_list.present? %>
        <% @favorite_list.each do |recipe| %>
          <div class="list-box">
            <%= link_to recipe_path(recipe.id) do %>
              <%= image_tag recipe.image, size: "200x200"%>
          <div class="list-comment">
            <span class="list-title">■<%= recipe.name %></span>
        <% end %>
          <span class="list-body"><%= recipe.caption %></span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
 </div>
</div>